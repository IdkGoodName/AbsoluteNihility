@require "./set"

notification-text = mix(notification, fg-colour[3], 45%)
notification-text-hover = mix(notification, fg-colour[3], 25%)
mention-text = mix(mention, fg-colour[3], 60%)
mention-text-hover = mix(mention, fg-colour[3], 40%)

BasicLink()
    @extends $TextThemeDullTransition
    &:hover
        @extends $TextThemeBleached
Link()
    &, &:visited, &:focus
        @extends $TextThemeDullTransition
    &:hover &:active
        @extends $TextThemeBleached

/*
 * -=- Foreground -=-
 */

// Normal text
$TextDarker
    color: fg-colour[0]
$TextDark
    color: fg-colour[1]
$TextDarkTransition
    color: fg-colour[1]
    transition: color
$TextMedium
    color: fg-colour[2]
$TextMediumTransition
    color: fg-colour[2]
    transition: color
$TextLight
    color: fg-colour[3]

// Notification text
$TextNotification
    color: notification-text
$TextNotificationHover
    color: notification-text-hover
$TextMention
    color: mention-text
$TextMentionHover
    color: mention-text-hover

// Accented text
$TextTheme
    color: var(--accent-0)
$TextThemeDull
    color: var(--accent-1)
$TextThemeDullTransition
    color: var(--accent-1)
    transition: color
$TextThemeBleached
    color: var(--accent-2)
$TextThemeContrast
    color: var(--accent-foreground)

// Highlighted text
$TextImportant
    color: important
$TextNormal
    color: normal-0
$TextNormalHighlight
    color: normal-1
$TextBad
    color: bad-0
$TextBadHighlight
    color: bad-1
$TextNeutral
    color: neutral-0
$TextNeutralHighlight
    color: neutral-1
$TextGood
    color: good-0
$TextGoodHighlight
    color: good-1
$TextWarning
    color: warning

// Normal SVG
$SvgDarker
    fill: fg-colour[0]
$SvgDark
    fill: fg-colour[1]
$SvgDarkTransition
    fill: fg-colour[1]
    transition: fill
$SvgMedium
    fill: fg-colour[2]
$SvgLight
    fill: fg-colour[3]

// Accented SVG
$SvgNotification
    fill: shade(notification-text, 20%)
$SvgNotificationHover
    fill: shade(notification-text-hover, 20%)
$SvgMention
    fill: shade(mention-text, 20%)
$SvgMentionHover
    fill: shade(mention-text-hover, 20%)
$SvgTheme
    fill: var(--accent-0)
$SvgThemeDull
    fill: var(--accent-1)
$SvgThemeDullTransition
    fill: var(--accent-1)
    transition: fill
$SvgThemeBleached
    fill: var(--accent-2)
$SvgThemeContrast
    fill: var(--accent-foreground)

// Highlighted SVG
$SvgImportant
    fill: important
$SvgNormal
    fill: normal-0
$SvgNormalHighlight
    fill: normal-1
$SvgBad
    fill: bad-0
$SvgBadHighlight
    fill: bad-1
$SvgNeutral
    fill: neutral-0
$SvgNeutralHighlight
    fill: neutral-1
$SvgGood
    fill: good-0
$SvgGoodHighlight
    fill: good-1
$SvgWarning
    fill: warning

// Normal text & SVG
$FontDarker
    font-color: fg-colour[0]
$FontDark
    font-color: fg-colour[1]
$FontMedium
    font-color: fg-colour[2]
$FontLight
    font-color: fg-colour[3]

// Accented text & SVG
$FontTheme
    font-color: var(--accent-0)
$FontThemeDull
    font-color: var(--accent-1)
$FontThemeBleached
    font-color: var(--accent-2)
$FontImportant
    font-color: important
$FontNormal
    font-color: normal-0
$FontNormalHighlight
    font-color: normal-1

// Highlighted text & SVG
$FontBad
    font-color: bad-0
$FontBadHighlight
    font-color: bad-1
$FontNeutral
    font-color: neutral-0
$FontNeutralHighlight
    font-color: neutral-1
$FontGood
    font-color: good-0
$FontGoodHighlight
    font-color: good-1