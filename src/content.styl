$FontTheme
    font-color: var(--accent-0)
$FontThemeDull
    font-color: var(--accent-1)
$FontThemeBleached
    font-color: var(--accent-2)
$FontImportant
    font-color: important
$FontNormal
    font-color: normal-0
$FontNormalHighlight
    font-color: normal-1
$FontBad
