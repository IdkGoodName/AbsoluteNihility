@require "../variables"

// Code highlight
.PrismTokenGenericLanguageRenderer
    // Special
    &-atrule, &-atrule-line, &-keyword, &-tag
        color: code-keyword
    &-annotation
        color: code-special
    &-important
        color: important

    // DIFF
    &-deleted, &-deleted-sign
        color: code-deleted
    &-deleted-arrow
        color: code-deleted
    &-inserted, &-inserted-sign
        color: code-inserted
    &-inserted-arrow
        color: code-inserted
    &-diff
        color: code-changed

    // Values
    &-template-string, &-string
        color: code-string
    &-attr-value, &-number, &-boolean, &-regex
        color: code-value
    &-null
        color: code-special

    // Named
    &-selector
        color: code-name
    &-property, &-property-line
        color: code-property
    &-class-name, &-builtin
        color: code-class-name
    &-function
        color: code-function
    &-variable
        color: code-variable
    &-less-variable, &-variable-line
        color: code-class-name

    // Formatting
    &-bold, &-italic
        color: fg-format
    &-underline
        text-decoration: underline solid
    &-strike
        text-decoration: line-through solid
    &-url
        text-decoration: underline solid
        color: var(--accent-1)
    &-url-reference
        color: var(--accent-2)

    // Code
    &-code
        color: fg-code