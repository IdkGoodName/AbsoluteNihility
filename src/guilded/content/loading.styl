    &-rounded-square, &-circle, &-square
        opacity: skeleton-opacity
// Loading video
.DynamicMediaLoader-container
    @extends $PanelSkeleton
// Loading team banner
.TeamPageBanner-skeleton
    background: skeleton-1
// Loading group icon
.GroupSelectorSkeleton-group
