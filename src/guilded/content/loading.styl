/*
 * -=- Skeletons & Loading styles -=-
 */

/*
 * --- Loading dots ---
 */

// Loading dot container
// .LoadingAnimationMicro-container
//     width: 40px

// Loading dots
.LoadingAnimationMicro-container-dark .LoadingAnimationMicro-bar,
.LoadingAnimationMicro-bar
    // Increase its width
    @extends $PanelTheme
    &:nth-child(1),
    &:nth-child(2),
    &:nth-child(3)
        animation-name: oldLoad
    // In channel typing, add different animation
    .ChatChannelInputTypingIndicator-container &
        &:nth-child(1),
        &:nth-child(2),
        &:nth-child(3)
            animation-name: animateTyping
// Loading animation
@keyframes oldLoad
    0%
        opacity: 0
        transform: translateY(32px)
    25%
        opacity: 0
    50%
        opacity: 1
        transform: translateY(0)
    100%
        opacity: 0
        transform: translateY(0)
// Typing animation
@keyframes animateTyping
    0%
        opacity: 0
        transform: scale(0, 0)
    50%
        opacity: 1
        transform: scale(1, 1)
    100%
        opacity: 0

