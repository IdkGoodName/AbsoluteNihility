@require "../../variables"
@require "../../set"
@require "../../fake"
@require "../../content"

/*
 * --- Content ---
 */

// Select all checkbox
.SelectToggleIcon-container
    @extends $SetBorderLight-2
    // Select all checkbox hover
    &-clickable:hover
        @extends $SetBorderLight-3
        background-color: alpha(bg-hover, 0.1)
// Select all checkmark
.SelectToggleIcon-checkmark
    @extends $SvgTheme

// Header
.ItemManagerColumnHeader
    &-container-sortable
        @extends $TextDarkTransition
    &-container-sortable:not(&-active):not(&-display):hover
        @extends $TextMedium
    // Selected sorting
    &-container-sortable.ItemManagerColumnHeader-active
        @extends $TextTheme
        // Arrow
        .ItemManagerColumnHeader-icon
            @extends $SvgTheme
.ItemManagerHeader-container
    border-bottom-color: border-light-0

.ItemManagerListItem
    &-container:not(:last-child)
        border-bottom-color: border-light-0
    // Selected member
    &-checkmark-icon
        @extends $SvgTheme
    &-container-selectable::after
        @extends $SetBorderTheme

/*
 * --- Filter ---
 */

// Filter icon
.ItemManagerFilterButton-icon
    @extends $SvgDarkTransition

.ItemManagerFilterButton-container
    // Filter icon hover
    &:not(&-active):hover .ItemManagerFilterButton-icon
        @extends $SvgMedium
    // Filter settings clicked
    &-open .ItemManagerFilterButton-icon
        @extends $SvgLight

.ItemManagerFilterWrapper
    &-header
        @extends $OverrideContentBordered-3
    // Filter settings
    &-container
        @extends $Panel-2
        border: none
    // Filter settings search
    &-search
        @extends $ContentBordered-4
// Filter menu hover
.ItemManagerFilterOption-container:hover
    background-color: bg-lighter


.SearchBarInput
    // Search bar
    &-input
        @extends $TextMedium
        // Placeholder
        &::placeholder
            @extends $TextDark
    // Filter settings search icon
    &-icon
        @extends $SvgMedium

/*
 * -=- Audit log -=-
 */

.TeamAuditLogAction-icon
    @extends $SvgDarker

.ChannelEntityNameDisplay
    &-container
        @extends $FakeMention
    &-icon
        @extends $SvgDark