@require "../../variables"
@require "../../set"
@require "../../fake"
@require "../../content"

/*
 * --- Content ---
 */

// Select all checkbox
.SelectToggleIcon
    &-container
        @extends $SetBorderLight-2
        // Select all checkbox hover
        &-clickable:hover
            @extends $SetBorderLight-3
            background-color: alpha(bg-hover, 0.1)

    &-checkmark
        @extends $SvgTheme

// Header
.ItemManagerColumnHeader
    &-container-sortable
        @extends $TextDarkTransition
    &-container-sortable:not(&-active):not(&-display):hover
        @extends $TextMedium
    // Selected sorting
    &-container-sortable^[0]-active
        @extends $TextTheme
        // Arrow
        & ^[0]-icon
            @extends $SvgTheme
.ItemManagerHeader-container
    border-bottom-color: border-light[0]

.ItemManagerListItem
    &-container:not(:last-child)
        border-bottom-color: border-light[0]
    // Selected member
    &-checkmark-icon
        @extends $SvgTheme
    &-container-selectable::after
        @extends $SetBorderTheme

/*
 * --- Filter ---
 */

.SearchBarInput
    // Search bar
    &-input
        @extends $TextMedium
        // Placeholder
        &::placeholder
            @extends $TextDark
    // Filter settings search icon
    &-icon
        @extends $SvgMedium

.FilterButton
    &-icon
        @extends $SvgDarkTransition
    // Hover
    &-container:not(&-container-active):hover &-icon
        @extends $SvgMedium
    // Open
    &-container-open &-icon
        @extends $SvgLight
    // Active
    &-container-active &-icon
        @extends $SvgTheme
    &-container-active
        @extends $TextTheme
    // Active hover
    &-container-active:hover &-icon
        @extends $SvgThemeDull
    &-container-active:hover
        @extends $TextThemeDull

/*
 * -=- Audit log -=-
 */

.TeamAuditLogAction-icon
    @extends $SvgDarker

.ChannelEntityNameDisplay
    &-container
        @extends $FakeMention
    &-icon
        @extends $SvgDark