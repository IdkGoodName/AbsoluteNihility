@require "../../variables"
@require "../../set"
@require "../../content"
@require "../guilded-variables"

+prefix-classes("Availability")
    // Whole container
    .Display-container
        @extends $ContentLight

    .DisplayHeader
        // Container arrow
        &-button
            @extends $ContentLight
            // Container arrow hover
            &::after
                @extends $ContentGlare
        // Container arrow's icon
        &-button
            @extends $SvgMedium
        // Current and other days
        &-day-today, &-day
            @extends $PanelLight
        // Tomorrow/alternative day
        &-day-alt
            @extends $PanelMedium
        // Day
        &-date
            @extends $TextLight
        // Timezone and date
        &-timezone,
        &-subtitle
            @extends $TextDarkTransition
            // Hover
            &:hover
                @extends $TextMedium
    // Time
    .DisplayTimeAxis-label
        @extends $TextMedium
    // Current time line
    .DayHour-now-line
        background-color: active

    .DisplayDaysPlaceholder
        // Others' area
        &-day, &-day-today
            @extends $PanelMediumHighlighted
        // Others' area tomorrow/alternative day
        &-day-alt
            @extends $PanelMediumHighlighted
        // Lighter/creation area
        &-create
            @extends $PanelLight
