@require "../../variables"
@require "../../content"

/*
 * --- Settings ---
 */

.TeamRecruitmentStatus
    // Highlighted text
    &-status
        // Open
        & ^[0]-container-status-open &
            @extends $TextGood
        // Closed
        & ^[0]-container-status-closed &
            @extends $TextBad
    &-toggle
        @extends $SvgDark

// Application selector wrapper
.TeamApplicationInlineLink-container
    @extends $ContentMildlyBordered-3

/*
 * --- View ---
 */

// Application info
.RecruitmentApplicantViewer
    // Wrapper
    &-applicant-card
        @extends $Panel-4
    // Application values
    &-form-results
        @extends $Panel-4
// Result icon
.FormResultDisplayFieldWrapper-field-header-icon
    @extends $SvgDark
// Application info
.ApplicantSummaryCard
    &-container
        & ^[0]-votes, & ^[0]-buttons-applied-date
            @extends $Panel-4
// Application status
.ApplicationStatusBadge
    &-icon
        // Accepted
        & ^[0]-container-accepted &
            @extends $SvgGood
        // Declined
        & ^[0]-container-declined &
            @extends $SvgBad
    &-text
        // Accepted
        & ^[0]-container-accepted &
            @extends $TextGood
        // Declined
        & ^[0]-container-declined &
            @extends $TextBad

/*
 * --- All Applications ---
 */

// Application
.ApplicantDisplayItem-container
    @extends $PanelBordered-3
    // Hover
    &-desktop::after
        @extends $ContentGlare
// Application status
.ApplicantSummaryAcceptDeclineForm-applicant-status
    .ApplicantSummaryAcceptDeclineForm-container-accepted &
        @extends $TextGood
// Application server's name
.TeamAvatarDetails-name.TeamAvatarDetails-name-bold
    @extends $TextLight
// Application timestamp
.ApplicantGameDateDisplay-date-text
    @extends $TextDark

// Application status
.ApplicationItemStatus
    &-label
        & ^[0]-container-status-1 &
            @extends $TextGoodHighlight
        & ^[0]-container-status-0 &
            @extends $TextBadHighlight

/*
 * --- Application modal ---
 */

// Background
.ApplyToTeam-container
    @extends $Panel-2