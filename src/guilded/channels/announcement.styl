@require "../../variables"
@require "../../set"
@require "../../content"

.ContentMetadataCreationInfo-from-now-link
    &, &:visited, &:active, &:focus
        @extends $TextDark
    &:hover
        @extends $TextMedium

// Unread announcement
.TeamAnnouncementItem
    &-container-unread
        SetNotification()
        & ^[0]-widget-wrapper
            @extends $ContentLight
        .PostDisplayV2-title .GH1-container
            @extends $TextNotification
        &:hover .PostDisplayV2-title .GH1-container
            @extends $TextNotificationHover

/*
 * --- Comment section ---
 */

// Replies preview
.LastReplyDisplay-container
    --body-text-color: fg-colour[2]
    &:hover
        --body-text-color: fg-colour[3]
// Preview text
.LastReplyDisplayContent-message-summary
    @extends $TransitionColour
// View more
.CircleImageStack
    &-label
        @extends $TextDarkTransition
        // View more hovered over
        .CircleImageStack-container-actionable:hover &
            @extends $TextMedium
    &-image
        @extends $PanelMild

.LastReplyDisplay
    // Timestamp
    &Content-timestamp
        @extends $TextDark
        @extends $TransitionColour
    // Comment hovered over should make time stamp brighter
    &-container:hover &Content-container &Content-timestamp
        @extends $TextMedium
