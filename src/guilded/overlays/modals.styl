@require "../../variables"
@require "../../set"
@require "../../content"

// Whole container
.TransientMenuPortalContext-portal-container
    opacity: floating-opacity
// Overlay
.ModalWrapper-container-unstyled > .Overlay-status-context
    margin: spacing-3
    width: 95%

// Modal
.ModalV2-container
    @extends $OverrideContentBordered-2
// Modal's title
.Form-header
    @extends $TextMedium
// Avatar/banner input title
.ImageInput-label
    @extends $TextLight
// Field input title
.FormFieldLabel-container
    @extends $TextMedium
// Field input description
.FormFieldDescription-container
    @extends $TextDark

/*
 * --- Modal with header ---
 */

// Modal's header
.ModalHeaderV2-container
    @extends $Panel-3
.ModalHeaderV2-header
    @extends $TextLight
// Modal with header's content
.ModalV2-container-has-header .ModalV2-modal-content
    border-top-color: border-light-1
.ConfirmationOverlay-text
    @extends $TextMedium
// Modal's footer
.ModalFooter-container
    border-top: none

// Fullscreen modal(settings)
.ModalV2-container-fullscreen
    @extends $Panel-2
    opacity: floating-opacity
    width: 100%
    height: 100%
// Rounds the modal - :not() makes sure that the modal isn't "Unsaved changes" and similar
.ModalV2-container:not(.ModalV2-container-has-header),
.ModalV2-container:not(.ModalV2-container-has-header) .ModalV2-modal-content
    @extends $RadiusHigh
// Modal close button
.ModalV2CloseButton-container
    @extends $SvgDarkTransition
    // Modal close button hover
    &:hover
        @extends $SvgMedium
