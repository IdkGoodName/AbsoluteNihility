@require "../../variables"
@require "../../set"
@require "../../content"
@require "../guilded-variables"

/*
 * -=- Settings -=-
 */

// Section tabs
.PersistentActionMenu-menu-section
    padding: 0 spacing-2

// Tabs
.OptionsMenu
    &-container-desktop .OptionsMenu-options-control
        @extends $PanelTransparent
    &-option-content
        SetScrollbar()
    // Options page
    &PageWrapper-container
        @extends $PanelTransparent
// Tab section header
.DesktopOptionsControlOptionHeader-container
    padding: 0 20px
// Tabs section header title
.DesktopOptionsControlOptionHeader-header-text
    @extends $TextMedium

// Tab text
.DesktopOptionsControlItemTemplate-label-text
    @extends $TextDark

settings-item-margin = 5px
.DesktopOptionsControlItemTemplate-container
    border-radius: radius-1
    padding: 6px 12px
    HasHighlightPill(settings-item-margin)

    @extends $FullBorderTransparent
    // Tab hover text
    &:hover
        @extends $MildContentLightHighlighted

        &::after
            display: none

        .DesktopOptionsControlItemTemplate-label-text
            @extends $TextMedium
    // Tab active
    &-active
        GiveHighlightPill(75%, settings-item-margin)
        @extends $PanelTransparent

        &, &:hover
            .DesktopOptionsControlItemTemplate-label-text
                @extends $TextLight

// Gilded tab
.DesktopOptionsControlItemTemplate
    &-container-type-gilded &-label-text
        color: $gold
    &-container-type-gilded&-container-desktop &-label-text
        color: tint($gold, 40%)
    &-container-type-gilded&-container-active &-label-text
        @extends $TextLight
/*
 * -=- User settings -=-
 */

// 2FA
.PersistentUpsell
    &-container-flavor-settings
        @extends $ContentLight
    &-title
        @extends $TextLight
    &-subtitle
        @extends $TextDark
// Connections/integrations
.SocialLinkPanel-header
    @extends $ContentLight
.UserSettings
    &ConnectionsPage,
    &SecurityPage,
    &BillingPage,
    &EmailPage,
    &Payments
        &-header
            @extends $TextLight
    // User settings subscription info
    &ServerSubscriptionsUpsell-container
        @extends $ContentLight
.UserPrivacySettingsPage-header
    @extends $TextLight
// Server to subscribe to
.ServerSubscriptionBar-container
    @extends $ContentLight
// Payment
.UserPaymentsHistory-none,
.PanelList-container-none
    @extends $TextMedium
.PaymentInstrumentSelector-add-method:hover
    @extends $TextThemeBleached

/*
 * -=- Server Settings -=-
 */

.TeamSettings
    &IntegrationsPage,
    &InvitesPage,
    &RolesList
        &-header
            @extends $TextLight

// Channel or category notifications header
.GuildedTableHeader-column-header-group, .GuildedTableHeader-column-header
    @extends $TextMedium
// Placeholder
.GuildedTableField-empty-text
    @extends $TextDark
// Category/channel hover
.GuildedTableRowInputWrapper-container-desktop::after
    @extends $ContentGlare
// Category/channel icon
.GuildedTableRowInputWrapper-icon
    @extends $SvgDark
// Category/channel title
.GuildedTableRowInputWrapper-name
    @extends $TextMedium
// X channels
.GuildedTableRowInputWrapper-description
    @extends $SvgDark
// Remove icon
.GuildedTableRowNotificationOverridesInput-remove
    @extends $TextBad

/*
 * -=- All Channels Settings -=-
 */

// Settings title
.PanelListTitle-container
    @extends $TextLight
// Channel null state
.SearchAndSelectControl-none
    @extends $TextDark
// Restorable channel
.PanelInfoArchiveRestore
    @extends $ContentLight
    &-channel-icon
        @extends $SvgDark
    &-details
        @extends $TextDark

/*
 * -=- Settings Pages -=-
 */

/*
 * --- Integrations ---
 */

// Team integrations
.TeamSettingsAddIntegration-container
    @extends $ContentLight
// Twitch integration
.TeamSettingsAddIntegration-container-type-twitch .TeamSettingsAddIntegration-icon
    fill: stream

/*
 * --- Groups ---
 */

// Group
.GroupSettingsPanel-container
    @extends $ContentLight
    // Group hover
    &:hover
        @extends $PanelMediumHighlighted
// Group gripper
.GroupSettingsPanel-icon
    @extends $SvgDark

/*
 * --- Subscriptions ---
 */

.ServerSubscriptionsSetupUpsell
    // Image
    &-header
        filter: guilded-subscriptions-transform
    // Subscriptions bg
    &-content
        @extends $PanelMedium
    // Points
    &List-icon
        &-swap
            fill: $blue
        &-plus
            fill: $purple
        &-currency
            fill: $green
        // Info icon
        &-fees
            @extends $SvgDark
// Subscription enabling
.ModalWrapper-container.ModalWrapper-container-required:not(.ModalWrapper-background-style-transparent)
    background: rgba(0, 0, 0, 0.6)

/*
 * --- Roles ---
 */

+prefix-classes("TeamSettings")
    // Role list item selected
    .PermissionsItem-container
        @extends $FullBorderTransparent
        &-selected
            @extends $ContentLight
    // Role list item hover
    .PermissionsItem-container-desktop .PermissionsItem-content::after
        @extends $ContentGlare
    // Add role
    .AddButton
        &-icon
            @extends $SvgDarkTransition
        &-text
            @extends $TextDarkTransition
    // Add role hover
    .AddButton-container:hover
        // Icon
        .AddButton-icon
            @extends $SvgMedium
        // Text
        .AddButton-text
            @extends $TextMedium

// Permission syncing
.TeamChannelRoleSyncControl
    &-container
        @extends $ContentLight
    // Syncing text
    &-info
        @extends $TextMedium
    &-category-name
        @extends $TextLight
        font-weight: bold
    // Synced icon
    &-icon
        @extends $SvgDark

/*
 * -=- Settings Sub-modals -=-
 */

// Group settings icon
.AddGroupOverlayDisplay-settings-icon
    @extends $SvgDarkTransition
    // Group settings hover
    &:hover
        @extends $SvgMedium

// Banned member
.ManageUserBanOverlay-UserProfile-container
    @extends $ContentLight

.ManageWebhookOverlay
    &-container
        @extends $TextNormal
        & ^[0]-image-input-label
            @extends $TextDark